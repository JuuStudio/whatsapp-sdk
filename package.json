{
  "name": "whatsapp-sdk",
  "version": "1.0.0",
  "description": "Modern TypeScript SDK for WhatsApp Cloud API v22.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "whatsapp",
    "api",
    "sdk",
    "cloud-api",
    "messaging",
    "bot",
    "typescript",
    "webhook"
  ],
  "author": {
    "name": "Your Name",
    "url": "https://github.com/yourusername"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/whatsapp-cloud-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/whatsapp-cloud-sdk/issues"
  },
  "homepage": "https://github.com/yourusername/whatsapp-cloud-sdk#readme",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@types/jest": "^27.0.0",
    "typescript": "^4.5.0",
    "jest": "^27.0.0",
    "ts-jest": "^27.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
